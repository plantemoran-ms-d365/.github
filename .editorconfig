# ensure that this file is the root for editorconfig
root = true

# ========================================

# config for all files
[*]

# use the utf-8 charset
charset = utf-8

# * use crlf for end-of-line
end_of_line = crlf

# use spaces for indentation
indent_style = space

# default indent size is 4 spaces
indent_size = 2

# trim trailing whitepace
trim_trailing_whitespace = true

# ensure a final newline at end of file
insert_final_newline = true

# ========================================

# config for markdown files
[*.md]

# do not trim trailing whitespace
trim_trailing_whitespace = false
